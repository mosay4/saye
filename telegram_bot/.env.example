# CyberBot AI Environment Variables
# نسخ هذا الملف إلى .env وملء القيم المطلوبة

# ========================================
# إعدادات البوت الأساسية (مطلوبة)
# ========================================

# مفتاح بوت التيليجرام - احصل عليه من @BotFather
TELEGRAM_BOT_TOKEN=

# مفتاح OpenAI API - احصل عليه من https://platform.openai.com/
OPENAI_API_KEY=

# ========================================
# إعدادات المدفوعات (اختيارية)
# ========================================

# مفاتيح Stripe للمدفوعات الإلكترونية
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# ========================================
# إعدادات قاعدة البيانات
# ========================================

# مسار قاعدة البيانات (SQLite افتراضي)
DATABASE_URL=sqlite:///cyberbot.db

# للإنتاج - استخدم PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/cyberbot

# ========================================
# إعدادات الأمان
# ========================================

# مفتاح سري للتشفير - استخدم مفتاح قوي وفريد
SECRET_KEY=your-very-secure-secret-key-here

# بيانات المشرف الافتراضي
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ========================================
# إعدادات البوت المتقدمة
# ========================================

# وضع التطوير (True للتطوير، False للإنتاج)
DEBUG=True

# رابط Webhook للإنتاج (اتركه فارغاً للتطوير)
BOT_WEBHOOK_URL=

# عدد العمليات المتزامنة
MAX_WORKERS=4

# ========================================
# إعدادات التخزين المؤقت (اختيارية)
# ========================================

# رابط Redis للتخزين المؤقت
REDIS_URL=redis://localhost:6379

# ========================================
# إعدادات المراقبة (اختيارية)
# ========================================

# Sentry DSN لمراقبة الأخطاء
SENTRY_DSN=

# مستوى التسجيل (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ========================================
# إعدادات الذكاء الاصطناعي
# ========================================

# نموذج OpenAI المستخدم
OPENAI_MODEL=gpt-4

# الحد الأقصى للرموز في الاستجابة
MAX_TOKENS=1000

# درجة الحرارة للإبداع (0.0-1.0)
TEMPERATURE=0.7

# ========================================
# إعدادات النشرة الإخبارية
# ========================================

# وقت إرسال النشرة اليومية (24-hour format)
NEWSLETTER_TIME=20:00

# مصادر الأخبار (مفصولة بفواصل)
NEWS_SOURCES=bleepingcomputer.com,thehackernews.com,krebsonsecurity.com

# ========================================
# إعدادات الإشعارات
# ========================================

# تفعيل الإشعارات
NOTIFICATIONS_ENABLED=True

# تفعيل النسخ الاحتياطية التلقائية
AUTO_BACKUP_ENABLED=True

# وقت النسخ الاحتياطي اليومي
BACKUP_TIME=02:00

# ========================================
# إعدادات الأداء
# ========================================

# مهلة الاتصال بالثواني
CONNECTION_TIMEOUT=30

# عدد محاولات إعادة الاتصال
MAX_RETRIES=3

# تأخير بين الرسائل (لتجنب حدود التيليجرام)
MESSAGE_DELAY=0.1

# ========================================
# إعدادات التطوير
# ========================================

# تفعيل وضع التصحيح المفصل
VERBOSE_LOGGING=False

# تفعيل اختبار الوحدات التلقائي
AUTO_TESTING=False

# مجلد الاختبارات
TEST_DATA_DIR=test_data/

